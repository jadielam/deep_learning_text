{
    "model": {
        "type": "SimpleMulticlassificationModel",
        "params": {
            "nb_classes": 6,
            "train_embedding": false,
            "max_sequence_length": 300,
            "gru_dropout": 0.2,
            "classification_dropout": 0.2,
            "hidden_size": 200
        }
    },
    "trainer": {
        "type": "simple",
        "params": {
            "nb_epochs": 20,
            "optimizer": {
                "type": "sgd",
                "params": {
                    "lr": 0.001
                }
            },
            "callbacks": [
                {
                    "type": "save_history",
                    "params": {
                        "output_path": "history.csv"
                    }
                },
                {
                    "type": "save_model",
                    "params": {
                        "model_output_path": "model.pth"
                    }
                }
            ]
        }
    },
    "generator": {
        "type": "multiclass",
        "params": {
            "batch_size": 10,
            "training_path": "/data/train.csv",
            "vocab_type": "glove.twitter.27B.200d"
        },
        "preprocessors": [

        ]
    }
}